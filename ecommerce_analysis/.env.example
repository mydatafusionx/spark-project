# Configurações do Projeto
APP_NAME="Ecommerce Analysis"
APP_ENV="development"  # development, testing, production
DEBUG="True"
SECRET_KEY="sua-chave-secreta-aqui"

# Configurações do Spark
SPARK_MASTER="local[*]"
SPARK_DRIVER_MEMORY="4g"
SPARK_EXECUTOR_MEMORY="4g"
SPARK_DRIVER_MAX_RESULT_SIZE="4g"
SPARK_SQL_SHUFFLE_PARTITIONS="4"

# Configurações de Log
LOG_LEVEL="INFO"
LOG_FILE="logs/ecommerce_analysis.log"
LOG_MAX_SIZE="10MB"
LOG_BACKUP_COUNT=5

# Configurações de Armazenamento
DATA_DIR="data"
RAW_DATA_DIR="data/raw"
PROCESSED_DATA_DIR="data/processed"
REPORTS_DIR="reports"
MODELS_DIR="models"

# Configurações de Geração de Dados
SAMPLE_N_CLIENTS=1000
SAMPLE_N_PRODUCTS=100
SAMPLE_N_ORDERS=5000
SAMPLE_START_DATE="2023-01-01"
SAMPLE_END_DATE="2023-12-31"

# Configurações de Análise
TOP_N_PRODUCTS=10
RFM_SEGMENTS=5
MIN_SUPPORT=0.05
MIN_CONFIDENCE=0.2

# Configurações de Banco de Dados (opcional)
DB_ENGINE="postgresql"
DB_NAME="ecommerce_db"
DB_USER="postgres"
DB_PASSWORD="postgres"
DB_HOST="localhost"
DB_PORT=5432

# Configurações de Email (para alertas e relatórios)
EMAIL_HOST="smtp.example.com"
EMAIL_PORT=587
EMAIL_USE_TLS="True"
EMAIL_HOST_USER="user@example.com"
EMAIL_HOST_PASSWORD="sua-senha"
EMAIL_FROM="noreply@example.com"
EMAIL_TO="admin@example.com"

# Chaves de API (exemplo)
# GOOGLE_MAPS_API_KEY="sua-chave-google-maps"
# AWS_ACCESS_KEY_ID="sua-chave-aws"
# AWS_SECRET_ACCESS_KEY="sua-chave-secreta-aws"
# AWS_REGION="us-east-1"

# Configurações de Proxy (se necessário)
# HTTP_PROXY="http://proxy.example.com:8080"
# HTTPS_PROXY="http://proxy.example.com:8080"
# NO_PROXY="localhost,127.0.0.1"

# Configurações de Internacionalização
TIMEZONE="America/Sao_Paulo"
LANGUAGE_CODE="pt-br"
USE_I18N="True"
USE_L10N="True"
USE_TZ="True"

# Configurações de Segurança
ALLOWED_HOSTS="localhost,127.0.0.1"
CSRF_TRUSTED_ORIGINS="http://localhost,http://127.0.0.1"

# Configurações de Cache
CACHE_BACKEND="django.core.cache.backends.locmem.LocMemCache"
CACHE_TIMEOUT=300

# Configurações de Sessão
SESSION_COOKIE_AGE=1209600  # 2 semanas em segundos
SESSION_SAVE_EVERY_REQUEST="True"

# Configurações de Upload
FILE_UPLOAD_MAX_MEMORY_SIZE=10485760  # 10MB
DATA_UPLOAD_MAX_MEMORY_SIZE=10485760  # 10MB

# Configurações de Monitoramento (opcional)
ENABLE_METRICS="False"
METRICS_PORT=9090

# Configurações de Depuração (não usar em produção)
DEBUG_TOOLBAR="False"
DEBUG_TOOLBAR_CONFIG='{"SHOW_TOOLBAR_CALLBACK": "%(callback)s"}'
